<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="600dp"
            android:layout_height="200dp"
            android:background="@color/item_monster">

        <ImageView
                android:id="@+id/monsterImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"/>
        <TextView
                android:id="@+id/nameMonster"
                android:textSize="16sp"
                android:layout_width="200dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toEndOf="@+id/monsterImage"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="25dp"/>
        <ImageView
                android:src="@drawable/icon_swipe"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@+id/monsterImage"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:id="@+id/imageView"/>
        <ImageView
                android:src="@drawable/icon_quick"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:id="@+id/imageView2"/>
        <ImageView
                android:src="@drawable/icon_counterstrike"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" android:id="@+id/imageView3"/>

        <TextView
                android:id="@+id/swipeAttack"
                android:layout_width="200dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@+id/nameMonster"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                android:layout_marginTop="18dp"/>

        <TextView
                android:id="@+id/quickAttack"
                android:layout_width="200dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@+id/swipeAttack"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                android:layout_marginTop="11dp"/>

        <TextView
                android:id="@+id/counterstrikeAttack"
                android:layout_width="200dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@+id/quickAttack"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                android:layout_marginTop="9dp"/>

        <TextView
                android:id="@+id/textHelp"
                android:background="@drawable/border_text"
                android:layout_width="300dp"
                android:layout_height="140dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintVertical_bias="0.5"
                android:padding="5dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>